	<!-- 日志配置 -->
	<bean id="logClass" class="com.echo.util.AddLog" />
    
    <!-- 日志记录类 -->        
	<bean id="logUtil" class="com.echo.aop.LogUtil"></bean>
	
	<!-- 日志管理aop -->
	<!-- 强制使用cglib代理，如果不设置，将默认使用jdk的代理，但是jdk的代理是基于接口的 -->
	<aop:config proxy-target-class="true" />  
	<aop:config>
	 <aop:aspect id="myAspect" ref="logUtil">
	  <aop:pointcut expression="execution(* com.echo..*.*(..))" id="logPointCut"/>
		<aop:before method="logInfo" pointcut-ref="logPointCut"/>
	 </aop:aspect>
	</aop:config>

	
	<!-- AOP配置 -->
	<aop:aspectj-autoproxy proxy-target-class="true"/>
	<aop:config>
	<!--方法日志切入点  -->
	
	<aop:aspect id="log" ref="logClass">
	 <!--日志切入点  -->
	<aop:pointcut expression="execution(* com.echo.service.impl.*.*(..))" id="logbsAssessPoint"/>
	<aop:after method="addLog" pointcut-ref="logbsAssessPoint"/>
	</aop:aspect>
	
	</aop:config>
	
    <!-- 配置事物的组件(Spring提供的对于hibernate事物的管理类) -->
   <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
   		<property name="sessionFactory" ref="sessionFactory"></property>
   </bean>
    <!-- 切入事物com.echo.dao.impl -->  
   <aop:config>
   		<aop:pointcut expression="execution(* com.echo.service..*.*(..))" id="businessService"/>
   		<aop:advisor advice-ref="txManager" pointcut-ref="businessService"/>
   </aop:config> 

   <!-- 配置通知 -->
     <tx:advice id="txManager" transaction-manager="transactionManager">
     	<!-- 指定需要被spring使用事物管理的方法 -->
     	<tx:attributes>
     		<tx:method name="add*" propagation="REQUIRED"/>
     		<tx:method name="remove*" propagation="REQUIRED"/>
     		<tx:method name="update*"  propagation="REQUIRED"/>
     		<tx:method name="search*" propagation="REQUIRED" read-only="true"/>
     	</tx:attributes>
     </tx:advice>
