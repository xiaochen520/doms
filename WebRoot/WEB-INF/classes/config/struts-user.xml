<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- 系统Action -->
	<package name="user" extends="struts-default">
		<!-- 登陆Action -->
		<action name="login_*" class="com.echo.action.LoginAction" method="{1}">
			<result name="success" type="dispatcher">/main.jsp</result>
			<result name="fail" type="dispatcher">/index.jsp</result>
			<result name="input">/index.jsp</result>
		</action>
		<!-- 用户Action -->
		<action name="user_*" class="com.echo.action.UserAction" method="{1}">
			<result name="success" type="dispatcher">/user.jsp</result>
			<result name="fail" type="dispatcher">/user.jsp</result>
		</action>
		<!-- 角色Action -->
		<action name="role_*" class="com.echo.action.RoleAction" method="{1}">
			<result name="success" type="dispatcher">/registerSuccess.jsp</result>
			<result name="fail" type="dispatcher">/registerFail.jsp</result>
			<result name="addsuccess" type="dispatcher">/page/basicInfo/userinfo.jsp</result>
			<result name="addfail" type="dispatcher">/page/basicInfo/adduser.jsp</result>
			<result name="userview" type="dispatcher">/page/basicInfo/userview.jsp</result>
			<result name="updateuserinfo" type="dispatcher">/page/basicInfo/userupdate.jsp</result>
		</action>
		
			<!-- 权限Action -->
		<action name="right_*" class="com.echo.action.RightAction" method="{1}">
			<result name="success" type="dispatcher">/registerSuccess.jsp</result>
			<result name="fail" type="dispatcher">/registerFail.jsp</result>
			<result name="addrightsuccess" type="dispatcher">/page/basicInfo/right.jsp</result>
			<result name="addrightfail" type="dispatcher">/page/basicInfo/addright.jsp</result>
			<result name="userview" type="dispatcher">/page/basicInfo/userview.jsp</result>
			<result name="updateuserinfo" type="dispatcher">/page/basicInfo/userupdate.jsp</result>
		</action>
	</package>
</struts>
